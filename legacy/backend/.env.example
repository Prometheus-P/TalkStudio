# Environment variables for Backend
# Example: .env file
# PORT=3000
# DATABASE_URL="mongodb://localhost:27017/talkstudio"
# JWT_SECRET="your_jwt_secret"
# ENCRYPTION_SECRET="your_encryption_secret"
# DISCORD_BOT_TOKEN="YOUR_DISCORD_BOT_TOKEN" # For AI Agent System communication, or if backend handles Discord interaction

# AI Providers (002-ai-conversation-generator)
# UPSTAGE_API_KEY="YOUR_UPSTAGE_API_KEY"     # Primary AI provider (required)
# OPENAI_API_KEY="YOUR_OPENAI_API_KEY"       # Fallback AI provider (optional)

# AI Generation Settings
# AI_DEFAULT_TEMPERATURE=0.7                  # Creativity level (0.0-1.0)
# AI_MAX_TOKENS=2000                          # Max tokens per generation
# AI_TIMEOUT_MS=30000                         # API timeout in milliseconds

# Rate Limiting
# GENERATION_RATE_LIMIT_PER_MIN=60            # Max generations per minute
# BULK_RATE_LIMIT_PER_HOUR=10                 # Max bulk jobs per hour

# Data Retention Settings (US7/NFR-8)
# DATA_RETENTION_DAYS=90              # Number of days to retain data (default: 90)
# DATA_RETENTION_CRON="0 2 * * *"     # Cron schedule for cleanup job (default: daily at 2 AM)
# DATA_RETENTION_ENABLED=true         # Enable/disable retention job (default: true)