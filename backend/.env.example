# Environment variables for Backend
# Example: .env file
# PORT=3000
# DATABASE_URL="mongodb://localhost:27017/talkstudio"
# JWT_SECRET="your_jwt_secret"
# ENCRYPTION_SECRET="your_encryption_secret"
# DISCORD_BOT_TOKEN="YOUR_DISCORD_BOT_TOKEN" # For AI Agent System communication, or if backend handles Discord interaction
# UPSTAGE_API_KEY="YOUR_UPSTAGE_API_KEY" # If backend calls Upstage API directly

# Data Retention Settings (US7/NFR-8)
# DATA_RETENTION_DAYS=90              # Number of days to retain data (default: 90)
# DATA_RETENTION_CRON="0 2 * * *"     # Cron schedule for cleanup job (default: daily at 2 AM)
# DATA_RETENTION_ENABLED=true         # Enable/disable retention job (default: true)